<style>
    .form-control{
        width: 400px;
    }
   
</style>

    <h1 class="testepo">Cadastro de Lanche</h1>

<div class="card">
    <div class="card-body bg-light" >
        <form action="/admin/novolanche" method="POST"  enctype="multipart/form-data">
            <label for="image">Imagem do Produto: </label>
                <input type="file" name="image" id="image" class="form-control" value="" required>
        
            <label for="name">Nome do Produto: </label>
                <input type="text" name="name" class="form-control" id="name"
                placeholder="Nome do Produto"
                >
        
             <label for="description"> Descrição do Produto </label>
                <textarea name="description" id="description" cols="30" rows="10" class="form-control" style="resize: none;"
                placeholder="igredientes, tamanho, etc"
                ></textarea>
        
                 <label for="price"> Preço:  </label>
                <input type="number" name="price" class="form-control" id="price"
                placeholder="Preço" min="1">

                <label for="section">Sessão: </label>
                <select name="section" id="section" class="form-select" required>

                    <option value="Categoria" selected disabled>Categoria</option>
                    <option value="FastFood">Fast Food</option>
                    <option value="Bebidas">Bebidas</option>
                    <option value="Tira-Gosto">Tira - Gosto</option>
                    <option value="Sobremesas">Sobremesas</option>
                     <option value="Almoço">Almoço</option>

                </select>

                <button type="submit" class="btn btn-warning mt-4" >Cadastrar</button>
        </form>
       
    </div>
</div>


