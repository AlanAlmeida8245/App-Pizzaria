<style>
    .form-control{
        width: 400px;
    }
   
</style>

    <h1 class="testepo">Editar Produto</h1>


<div class="card">
    <div class="card-body bg-light" >
        <form action="/admin/edit/almoco" method="POST" enctype="multipart/form-data">
      
            <input type="hidden" name="id" id="id" value="{{_id}}">
            <label for="image">Imagem do Produto: </label>
                <input type="file" name="image" id="image" class="form-control" value="{{img}}" required>
        
            <label for="name">Nome do Produto: </label>
                <input type="text" name="name" class="form-control" id="name"
                placeholder="Nome do Produto" value="{{name}}"
                >
        
             <label for="description"> Descrição do Produto </label>
                <textarea name="description" id="description" cols="30" rows="10" class="form-control" style="resize: none;"
                placeholder="igredientes, tamanho, etc"
                >{{description}}</textarea>
        
                 <label for="price"> Preço:  </label>
                <input type="number" name="price" class="form-control" id="price"
                placeholder="Preço" value="{{price}}">

                <button type="submit" class="btn btn-warning mt-4" >Editar</button>
        </form>
    </div>
</div>



