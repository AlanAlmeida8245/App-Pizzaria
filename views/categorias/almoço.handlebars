
<style>
    .row{
        display: flex;
        flex-direction: row;
    }
     .d-flex{
        flex-wrap: wrap;
         display: flex;
        justify-content: center;

    }
    .form-control{
        width: 70px;
        height: 40px;

    }
    body{
        background-color: rgb(20, 20, 20);
    }
    .jumbotron-heading{
        color: orange;
    }
    h4{
        color: rgb(5, 158, 5);
    }
    svg{
      background-color: crimson;
      border-radius: 5px;
      height: 34px;
      width: 34px;
    }
    #icone{
      background-color: lightgreen;
      padding: 5px;
      width: 34px;
    }
    svg:hover{
      cursor: pointer;
      background-color: rgb(255, 0, 0);
    }
    #icone:hover{
      background-color: rgb(124, 204, 124);
    }
    
</style>

{{#each erros}}
    <div class=" alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Almoço</h1>
          <p class="lead text-muted">quer bater aquele rango ? confira nosso cardapio de pratos feitos</p>
        </div>
      </section>

<div class="d-flex p-2 bd-highlight mb-3">
    {{#each almoco}}
    <div class="p-2 bd-highlight">
        <div class="card" style="width: 18rem;">
        <img src="../../{{img}}" alt="...">
        <div class="card-body">
            <h4 class="card-text mt-4" style="text-align: center; color: black">{{name}}</h4>
            <h4 class="card-subtitle mb-2 mt-3">R${{price}}</h4>
                  <p class="card-text">{{description}}.</p>
                  <form action="/clientes/addcart" method="post"></form>
                <input type="hidden" name="id" id="id" value="{{_id}}">
                <div class="teste d-flex justify-content-between">
              
                  <a href="/clientes/almoco/item/{{_id}}"><button class="btn btn-warning mt-4">Comprar</button></a>
                    </form>
                </div>
        </div>
        </div>
    </div>
    {{else}}
    <h4 style="color: #fff;">Não tem produtos disponiveis</h4>
    {{/each}}

</div>